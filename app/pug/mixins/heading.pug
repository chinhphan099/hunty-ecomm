mixin heading(headingText, link, countdown, tag)
    -tagName = 'h2'
    if tag
        -tagName = tag
    if link
        - cls = 'heading--link'
    .heading(class!=cls)&attributes(attributes)
        <!{tagName} class="heading__text">
            !=headingText
        </!{tagName}>
        if countdown
            span.countdown(data-countdown="")
                span.countdown__item.countdown--hour 09
                span.countdown__item :
                span.countdown__item.countdown--minute 09
                span.countdown__item :
                span.countdown__item.countdown--second 09

        if link
            +link('See All', '#!').see-all
