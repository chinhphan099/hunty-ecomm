if hidenHeaderOnMobile
  -hidenHeaderOnMobileCls = 'hidden-sm-down'

header.header(class=hidenHeaderOnMobileCls)
  .header__inner
    .container
      .header__wrap
        +link('Category Menu', 'javascript:;').header__hamburger.hidden-md-up: i.icon-hamburger
        .header__logo
          +link('Hunty', 'index.html'): +img('logo.png', 'Hunty')(style="width: 120px;")
        +link('Search', 'javascript:;').header__search-btn.hidden-md-up: i.icon-search
      .header__searchForm
        .header__searchForm-inner
          button.header__btn-back.hidden-md-up: i.icon-arrow-left
          +customInput({id: 'search_btn', type: 'button', text: '<span>Tìm kiếm</span>', iconClass: 'icon-search'}, {id: "txt_search", placeholder: 'Search for Brand, Promotion... '}, {iconCls: 'icon-search'})
        .header__search-auto-complete
          .header__searchAutocomplete__list
            -for(var i = 0; i < 3; i++)
              +link('Search Content').result-item
          .header__searchResults
            ul.tabs
              li.active#tab1: +link('Promotion', 'promotion.html')
              li#tab2: +link('Map', '#')
            .tab_content
              .pane.tab1.active
                +heading({text: 'Lastest Search', tag: 'h3'})
                .searchResults_list
                  -for(var i = 0; i < 4; i++)
                    +searchResult('')
                +heading({text: 'Hot Trends', tag: 'h3'})
                .searchResults_list
                  -for(var i = 0; i < 4; i++)
                    +searchResult('')
              .pane.tab2
      .header__links.hidden-sm-down
        .header__mini_cart
          .header__mini_cart_title
            +link('Cart ', 'cart.html').header__cart_link.uppercase
              span.header__mini_cart_count
                i.icon-cart
                span 2
              span Giỏ Hàng
          .header__mini_cart_notice
            p Thêm vào giỏ hàng thành công!
        .header__notification
          +link('Thông Báo', 'notification.html').uppercase
            span.icon
