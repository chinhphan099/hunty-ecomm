section.banner
    .container
        .banner__inner
            .banner__slider
                .slider(data-cslider='{"type": "single", "dots": true, "autoplay": true, "fade": true}')
                    .slick
                        .item
                            +img-upload('banner.png').img-view
                        .item
                            img(src="https://picsum.photos/894/380?grayscale").img-view
                        .item
                            img(src="https://picsum.photos/894/380").img-view
                    span.load

            .banner__promo.hidden-md-down
                +link('Image', '#')
                    +img-upload('promo_1.png')
                +link('Image', '#')
                    +img-upload('promo_2.png')
                +link('Image', '#')
                    +img-upload('promo_3.png')
