.modal.login-modal
	.modal__dialog
		.modal__content
			button(type="button").close: i.icon-close
			.login(data-collapse='')
				.login__tabs
					li.active#tab1(data-active=""): +link('Login', '#')(data-handle="login")
					li#tab2(data-active=""): +link('Create Account', '#')(data-handle="register")
				.login__tab-content
					.login__pane.tab1.active(data-content="login")
						.login__form
							form(action="")
								.fieldset
									+label('name_email', 'Name / Email')
									+input({id: 'name_email', placeholder: 'Please input your phone number or email'})
									p.error-message This field is required.
								.fieldset
									+label('password', 'Password')
									+input({type:'password', id: 'loginPassword', placeholder: 'Password'})
									p.error-message This field is required.
								.fieldset.two_col
									button(type="submit").button.btn-login Login
									p.forgot-password: +link('Forgot your password?', '#')
								.fieldset
									p.or-login Or login with
								.fieldset.login-socials
									button.button.btn-login-google
										i.icon-brand-google
											span.path1
											span.path2
											span.path3
											span.path4
											span.path5
											span.path6
										| Google
									button.button.btn-login-fb
										i.icon-fb-circle #[span.path1]#[span.path2]
										| Facebook
					.login__pane.tab2(data-content="register")
						.login__form.register
							form(action="")
								.fieldset
									+label('first_name', 'First Name')
									+input({id: 'first_name', placeholder: 'First Name'})
									p.error-message This field is required.
								.fieldset
									+label('last_name', 'Last Name')
									+input({id: 'last_name', placeholder: 'Last Name'})
									p.error-message This field is required.
								.fieldset
									+label('email', 'Email')
									+input({id: 'email', placeholder: 'Email'})
									p.error-message This field is required.
								.fieldset
									+label('password', 'Password')
									+input({type:'password', id: 'password', placeholder: 'Password'})
									p.error-message This field is required.
								.fieldset
									+label('re-type-password', 'Re-type Password ')
									+input({type:'password', id: 'reTypePassword', placeholder: 'Re-type Password '})
									p.error-message This field is required.
								.fieldset
									+label('telephone', 'Telephone')
									+input({type: 'tel', id: 'telephone', placeholder: 'Telephone'})
									p.error-message This field is required.
								.fieldset
									ul.gender
										li: span Gender
										li: +radio({name: 'Male', id: 'Male', text: 'Male', checked: 'checked' }).circle
										li: +radio({name: 'Male', id: 'Female', text: 'Female'}).circle
								.fieldset
									+label('telephone', 'Birthday')
									+customDate({id: 'date', placeholder: "Birthday"})
									p.error-message This field is required.
								.fieldset: button(type="submit").button.btn-submit Submit


