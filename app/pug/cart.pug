extends layouts/layout

block vars
	-title = 'Cart | Hunty'

block main
	main
		.container
			.cart
				+heading('Cart')
				.cart__inner
					.cart__primary
						.cart__list
							-for (var i = 0; i < 5; i++)
								+cartItem()
					.cart__sidebar
						.fieldset.coupon_code
							+label('couponCode', 'Apply Discount Code')
							+customInput({id: 'couponCodeBtn', text: 'Apply', btnClass: 'button'}, {id: "couponCode"})

						.cartSubtotal
							.cartSubtotal__inner
								.cartSubtotal_text Total
								.cartSubtotal__total 1.120.000 VND 
							.cartSubtotal__next: button(type="button").button Next


							
