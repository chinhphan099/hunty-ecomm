extends layouts/layout

block vars
	-title = 'Promotion | Hunty'

block main
	main
		section.promotion_banner
			+img-upload('banner_promo.jpg')
		section.promotion_container
			.container
				.promotion_inner
					.primary
						h1.main_title  Lotte Mart disscount 30%
						.product_list
							-for (var i = 0; i < 12; i++)
								+product('two-price')
					.sidebar
						.promotion_shop
							.shop_item
								.shop_avt
									+img-upload('shop.png')
								.shop_desc
									h3.shop_title Lotte Mart
									.shop_location
										i.icon-location
										span 1.3km from you
							.button_inner
								+link("Follow Shop", "javascript:;").button.hollow.active
									i.icon-heart
									span Follow Shop
								+link("Follow Shop", "javascript:;").button.hollow
									i.icon-shop
									span View Shop



		section.promotion_section.pusher__b
			.container
				+heading('Recommended Promotion ', 'See All')
			.promotion_section__inner
				.container
					include modules/index/promotion_block
block popup
	include modules/index/login-popup
