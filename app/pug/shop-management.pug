						img(src="images/upload/banner-800-530.jpeg", alt="")
					+shopInfo('no-button')
					include modules/manage-shop/block-3
					include modules/manage-shop/manage-static
					include modules/manage-shop/block-4
					include modules/manage-shop/block-5
					include modules/manage-shop/block-shipping
